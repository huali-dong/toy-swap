/**index.wxss**/
/* 搜索栏样式 */

.search-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
}

/* 分类导航样式 */
.category-nav {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 28rpx;
}

.category-item.active {
  color: #14A968;
  background-color: rgba(20, 169, 104, 0.1);
}

/* 内容区域 */
.content-scroll {
  flex: 1;
  margin-top: 18rpx;
  height: calc(100vh - 18rpx);
}

/* 推荐玩具样式 */
.section {
  margin: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.toy-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.toy-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.toy-image {
  width: 100%;
  height: 400rpx;
}

.toy-info {
  padding: 16rpx;
}

.toy-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.toy-condition, .toy-distance {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 地图样式 */
.map-container {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
}
